{% extends 'security/anonymous-base-aside.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Override base font size for Clerk component to work correctly */
        html, body {
            font-size: 16px !important;
        }
    </style>
{% endblock %}

{% block bodyContent %}

    {# Clerk Sign-In Component Container #}
    {# Single component handles sign-in with link to sign-up #}
    <div id="clerk-auth" class="d-flex justify-content-center align-items-center" style="min-height: 500px; font-size: 16px;">
        {# Loading spinner - shown while Clerk component loads #}
        <div class="clerk-loading text-center">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="sr-only">Loading...</span>
            </div>
            <p class="text-primary mt-3 mb-0">Loading ...</p>
        </div>
    </div>

    {# Include Clerk configuration script #}
    {% include 'partials/_clerk-config.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
     {{ encore_entry_script_tags('js/clerk-sign-in') }}
{% endblock %}


